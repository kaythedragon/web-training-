        <script>
        const greetings = ["turn upppp!", "Welcome!", "wasss poppinnn"];
        function randomNumber(lower, upper) {
            let rand = (Math.random() * (upper - lower)) + lower;
            let wholeNum = Math.round(rand);
            return wholeNum;
            }

        function randomGreeting(greeting) {
            return greeting[randomNumber(0,2)];
        }
        
        var clicks = 0;
        var pluralNoun = '';
        var tooManyClick = '';
        alert(randomGreeting(greetings));
        document.addEventListener("DOMContentLoaded", function() {
            const greetingMessage = document.getElementById("greeting-message");
            const greet = document.createElement("h2");
            greet.innerText = randomGreeting(greetings);
            greetingMessage.append(greet);

            let clickable = document.querySelector("#heading");
            clickable.addEventListener("click", function(event) {
    	    clicks += 1;
    	    event.preventDefault();
            if (clicks == 2) {
                pluralNoun = 's';
            }
            if (clicks >= 10) {
                tooManyClick = "Nice Job Mate!";
            }
            greet.innerText = clicks + ' Click' + pluralNoun + '! ' + tooManyClick;
            if (clicks == 5) {
                console.log("You've found me! Congratulations!")
            }
            })
        })
        </script>
